<nav class="navbar  navbar-dark bg-primary">
  <a class="navbar-brand" href="/">User</a>
  <div class="d-flex" >
  <% if user_signed_in? %>
  <%= button_to "Home", root_path, method: :get, :class => 'btn btn-primary ' %>
